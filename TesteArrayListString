/*Crie uma classe TesteArrayListString que possui um
método main.
2. Dentro do main crie um ArrayList de String.
3. Adicione 10 Strings informadas pelo usuário.
4. Percorra a lista imprimindo o valor de cada String.
5. Ordene os objetos contidos na lista.
6. Percorra a lista imprimindo o valor de cada String*/



import java.util.ArrayList;
import java.util.Collections;
import java.util.Scanner;

public class TesteArrayListString {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        ArrayList<String> lista = new ArrayList<>();
        
        // Adiciona 10 Strings informadas pelo usuário
        System.out.println("Digite 10 palavras:");
        for (int i = 0; i < 10; i++) {
            System.out.print("Palavra " + (i + 1) + ": ");
            lista.add(scanner.nextLine());
        }
        
        // Imprime os valores da lista
        System.out.println("\nLista antes da ordenação:");
        for (String s : lista) {
            System.out.println(s);
        }
        
        // Ordena a lista
        Collections.sort(lista);
        
        // Imprime os valores ordenados da lista
        System.out.println("\nLista após a ordenação:");
        for (String s : lista) {
            System.out.println(s);
        }
        
        scanner.close();
    }
}
